{
  "version": "1.1.1",
  "name": "zheltikov/php-arrays",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Zheltikov\\Arrays\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "require": {
    "php": "^7.4",
    "zheltikov/php-exceptions": "^1.0"
  },
  "require-dev": {
    "nazar-pc/phpt-tests-runner": "^1.4"
  },
  "authors": [
    {
      "name": "Max Zheltikov",
      "homepage": "https://github.com/zheltikov"
    }
  ],
  "license": "MIT",
  "scripts": {
    "test": "phpt-tests-runner tests/",
    "phpdoc": "phpdoc -d ./src -t ./docs --setting=graphs.enabled=true",
    "phpdoc-clean": "rm -r ./.phpdoc ; rm -r ./docs ; mkdir ./docs"
  }
}
